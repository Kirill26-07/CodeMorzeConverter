<?xml version="1.0" encoding="UTF-8"?>
<project name="module_codmorze" default="compile.module.codmorze">
  <dirname property="module.codmorze.basedir" file="${ant.file.module_codmorze}"/>
  
  <property name="module.jdk.home.codmorze" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.codmorze" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.codmorze" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.codmorze" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="codmorze.output.dir" value="${module.codmorze.basedir}/out/production/CodMorze"/>
  <property name="codmorze.testoutput.dir" value="${module.codmorze.basedir}/out/test/CodMorze"/>
  
  <path id="codmorze.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="codmorze.module.production.classpath">
    <path refid="${module.jdk.classpath.codmorze}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="codmorze.runtime.production.module.classpath">
    <pathelement location="${codmorze.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="codmorze.module.classpath">
    <path refid="${module.jdk.classpath.codmorze}"/>
    <pathelement location="${codmorze.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  <path id="codmorze.runtime.module.classpath">
    <pathelement location="${codmorze.testoutput.dir}"/>
    <pathelement location="${codmorze.output.dir}"/>
    <path refid="library.kotlinjavaruntime.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.codmorze">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.codmorze">
    <patternset refid="excluded.from.module.codmorze"/>
  </patternset>
  
  <path id="codmorze.module.sourcepath">
    <dirset dir="${module.codmorze.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.codmorze" depends="compile.module.codmorze.production,compile.module.codmorze.tests" description="Compile module CodMorze"/>
  
  <target name="compile.module.codmorze.production" depends="register.custom.compilers" description="Compile module CodMorze; production classes">
    <mkdir dir="${codmorze.output.dir}"/>
    <javac2 destdir="${codmorze.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.codmorze}/javac">
      <compilerarg line="${compiler.args.codmorze}"/>
      <bootclasspath refid="codmorze.module.bootclasspath"/>
      <classpath refid="codmorze.module.production.classpath"/>
      <src refid="codmorze.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.codmorze"/>
    </javac2>
    
    <copy todir="${codmorze.output.dir}">
      <fileset dir="${module.codmorze.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.codmorze.tests" depends="register.custom.compilers,compile.module.codmorze.production" description="compile module CodMorze; test classes" unless="skip.tests"/>
  
  <target name="clean.module.codmorze" description="cleanup module">
    <delete dir="${codmorze.output.dir}"/>
    <delete dir="${codmorze.testoutput.dir}"/>
  </target>
</project>