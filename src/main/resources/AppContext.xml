<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="IOContext.xml"/>
    <import resource="CodMapContext.xml"/>

    <bean id="startBoard" class="StartBoard">
        <constructor-arg index="0" ref="reader"/>
        <constructor-arg index="1" ref="printer"/>
        <constructor-arg index="2" ref="inputText"/>
        <constructor-arg index="3" ref="inputCode"/>
    </bean>

    <bean id="inputText" class="controllers.InputText">
        <constructor-arg index="0" ref="toCode"/>
        <constructor-arg index="1" ref="printer"/>
    </bean>

    <bean id="inputCode" class="controllers.InputCode">
        <constructor-arg index="0" ref="printer"/>
        <constructor-arg index="1" ref="reader"/>
        <constructor-arg index="2" ref="toText"/>
    </bean>

    <bean id="toCode" class="controllers.converter.ToCode">
        <constructor-arg index="0" ref="printer"/>
        <constructor-arg index="1" ref="mapRUS"/>
    </bean>

    <bean id="toText" class="controllers.converter.ToText">
        <constructor-arg index="0" ref="mapRUS"/>
        <constructor-arg index="1" ref="mapENG"/>
        <constructor-arg index="2" ref="printer"/>
    </bean>
</beans>